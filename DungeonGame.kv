#:import randint random
#:kivy 1.8.0

<Ball>:
    size: 10, 10


<Room>:
    size: 100, 100


<Level>:
    orientation: 'vertical'

    ball: my_ball
    acc_label: my_acc_label
    fri_label: my_fri_label
    button: toggle_button
    room: my_room


    FloatLayout:
        Ball:
            id: my_ball
            size_hint: None, None
            canvas:
                Color:
                    rgba: 1,0,0,1
                Ellipse:
                    size: self.size
                    pos: self.pos
        Room:
            id: my_room
            size_hint: None, None
            center: 100, 100


    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'
        padding: '4dp'

        Label:
            id: my_acc_label
            font_size: 30
            text: ''

        ToggleButton:
            id: toggle_button
            text: 'Start'
            on_press: root.do_toggle()

        Label:
            id: my_fri_label
            font_size: 30
            text: ''
